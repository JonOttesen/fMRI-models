{
    "name": "FastMRI_Unet",
    "n_gpu": 1,

    "arch": {
        "type": "UNet",
        "args": {}
    },
    "data_loader": {
        "type": "FastMRI",
        "args":{
            "data_dir": "data/",
            "batch_size": 8,
            "shuffle": true,
            "validation_split": 0.1,
            "num_workers": 2
        }
    },
    "optimizer": {
        "type": "Adam",
        "args":{
            "lr": 1e-6,
            "weight_decay": 0,
            "amsgrad": true
        }
    },
    "loss": "nll_loss",
    "metrics": [
        "accuracy", "top_k_acc"
    ],
    "lr_scheduler": {
        "type": "StepLR",
        "args": {
            "step_size": 50,
            "gamma": 0.1
        }
    },
    "trainer": {
        "epochs": 100,

        "save_dir": "/home/jon/Documents/CRAI/saved/",
        "save_period": 1000,
        "verbosity": 2,
        "monitor": "min val_loss",
        "early_stop": 10,
        "tensorboard": true

    }
}
